// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Response {
  id         Int      @id @default(autoincrement())
  userId     String   // User ID to identify the user
  questionId Int      // The question this answer relates to
  answer     Int      // The score for this answer
  createdAt  DateTime @default(now())
}

model Question {
  id      Int    @id @default(autoincrement())
  text    String
  options Option[]
}

model Option {
  id         Int      @id @default(autoincrement())
  text       String
  score      Int
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
}

model MoodAssessment {
  id    String  @id @default(uuid()) // Unique UUID for each mood assessment
  mood  String  // Description of the mood (e.g., "happy", "sad", etc.)
  score Int     // Score associated with the mood
  date  DateTime @default(now()) // Timestamp when the assessment was created
}
