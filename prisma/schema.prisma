model User {
  id                Int                      @id @default(autoincrement()) // Unique identifier for the user
  username          String                   @unique
  email             String                   @unique
  passwordHash      String
  responses         UserResponse[]           // Relation to the UserResponse model
}

model Section {
  id          Int          @id @default(autoincrement())  // Unique identifier for the section
  name        String       // Name of the section (e.g., Mood & Emotional Regulation)
  questions   Question[]   // One-to-many relation to the Question model
}

model Question {
  id          Int          @id @default(autoincrement())  // Unique identifier for the question
  text        String       // The text of the question (e.g., "How would you rate your overall mood?")
  sectionId   Int          // Foreign key to Section
  section     Section     @relation(fields: [sectionId], references: [id])  // Relation to the Section model
  answers     Answer[]     // One-to-many relation to the Answer model
}

model Answer {
  id          Int          @id @default(autoincrement())  // Unique identifier for the answer
  text        String       // The answer text (e.g., "Very Positive", "Somewhat Positive", etc.)
  score       Int          // The score for the answer (1 to 5)
  questionId  Int          // Foreign key to Question
  question    Question     @relation(fields: [questionId], references: [id]) // Relation to the Question model
}

model UserResponse {
  id          Int          @id @default(autoincrement())  // Unique identifier for the user response
  userId      Int          // Foreign key to User
  questionId  Int          // Foreign key to Question
  answerId    Int          // Foreign key to Answer (selected answer by user)
  user        User         @relation(fields: [userId], references: [id]) // Relation to the User model
  question    Question     @relation(fields: [questionId], references: [id]) // Relation to the Question model
  answer      Answer       @relation(fields: [answerId], references: [id])  // Relation to the Answer model
}

