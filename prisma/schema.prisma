datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Response {
  id          Int      @id @default(autoincrement())
  userId      String   // user ID to identify the user
  questionId  Int      // the question this answer relates to
  answer      Int      // the score for this answer
  createdAt   DateTime @default(now())
}

model Question {
  id      Int    @id @default(autoincrement())
  text    String
  options Option[]
}

model Option {
  id        Int     @id @default(autoincrement())
  text      String
  score     Int
  question  Question @relation(fields: [questionId], references: [id])
  questionId Int
}
